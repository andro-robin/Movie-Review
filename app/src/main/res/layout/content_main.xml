<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="secondMovie"
            type="com.moviereview.moviereviewapp.model.Movie" />

    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.moviereview.moviereviewapp.view.MovieActivity"
        tools:showIn="@layout/activity_movie">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:showIn="@layout/activity_movie">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:showIn="@layout/activity_movie">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/detMovTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{secondMovie.originalTitle}"
                        android:textSize="28dp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:padding="16dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_creator="1"
                        app:layout_constraintTop_creator="1"/>

                    <TextView
                        android:id="@+id/releaseDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{secondMovie.title}"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:padding="16dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/detMovTitle"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintLeft_creator="1"
                        app:layout_constraintTop_creator="1"/>


                    <TextView
                        android:id="@+id/detMovRating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{Double.toString(secondMovie.voteAverage)}"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#FFC107"
                        android:padding="16dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/releaseDate"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintLeft_creator="1"
                        app:layout_constraintTop_creator="1"/>


                    <TextView
                        android:id="@+id/detMovOverView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{secondMovie.overview}"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:padding="16dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/detMovRating"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintLeft_creator="1"
                        app:layout_constraintTop_creator="1"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </ScrollView>

        </LinearLayout>



    </RelativeLayout>


</layout>